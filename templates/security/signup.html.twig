{% extends 'base.html.twig' %}

{% block title %}Hello ErrorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 <h1>Signup </h1>
    <form action="{{ path('get_register') }}" method="post">
        <label for="inputEmail">Email</label>
        <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <button type="submit" name="submit" class="g"  id="btn" onclick="printmsg()" >Login</button>
    </form>  
    <br>
    <a href="{{ path('app_login') }}">Already registered? Click Here!</a>   
</div>
{% endblock %}
